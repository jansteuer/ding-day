<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.steuer.gtdapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cz.steuer.gtdapp.TaskListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.steuer.gtdapp.TaskDetailActivity"
            android:label="@string/title_task_detail"
            android:parentActivityName=".TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.steuer.gtdapp.TaskListActivity" />
        </activity>

        <provider
            android:name=".model.TasksContentProvider"
            android:authorities="cz.steuer.gtdapp"
            android:exported="false" />
    </application>

</manifest>
